@model IEnumerable<ClaimsAndComplaints.Models.Complaint>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Agregar queja", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Cliente
        </th>
        <th>
            Tipo de Queja
        </th>
        <th>
            Departamento
        </th>
        <th>
            Producto
        </th>
        <th>
            Fecha de Creación
        </th>
        <th>
            Detalle
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Client.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ComplaintType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.detail)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdComplaint }) |
            @Html.ActionLink("Ver", "Details", new { id=item.IdComplaint }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdComplaint })
        </td>
    </tr>
}

</table>
