@model ClaimsAndComplaints.Models.Reclaim

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Editar Reclamo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdReclaim)

        <div class="form-group">
            @Html.LabelFor(model => model.IdClient, "Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
